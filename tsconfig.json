{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "target": "es2021",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "strictNullChecks": false,
        "outDir": "tmp",
        "baseUrl": ".",
        "paths": {
            "@spt/*": ["./types/*"]
        }
    },
    "lib": ["es2020"],
    "include": ["src/*", "src/**/*"]
}
